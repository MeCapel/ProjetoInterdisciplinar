@model ProjetoInterdisciplinar.ViewModels.PJDtoViewModel
@{
    ViewData["Title"] = "Edit pj";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container d-flex justify-content-center p-5">

    <div class="row">

        <!-- DIV -->
        <div class="border border-dark rounded-2 bg-white p-4" style="width: 50vw;">

            <!-- TITLE -->
            <div class="text-center">
                <p class="fs-4 fs-md-2 fw-bold text-secondary">Editar</p>
            </div>

            <form asp-action="PJEdit" method="post">
                @Html.AntiForgeryToken()

                <!-- Name -->
                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input class="col-12 form-control border border-dark rounded-2 mb-4"
                           asp-for="Name">
                </div>


                <div class="row justify-content-between">
                    <!-- Ramo -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="Ramo"></label>
                            <input class="form-control border border-dark rounded-2 mb-4"
                                   type="text" asp-for="Ramo">
                        </div>
                    </div>

                    <!-- CNPJ -->
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="CNPJ"></label>
                            <input class="form-control border border-dark rounded-2 mb-4"
                                   type="text" asp-for="CNPJ">
                        </div>
                    </div>
                </div>


                <!-- Habilitado(a) -->
                <div class="form-group">
                    <input class="col-12 form-check-input border border-dark rounded-2 mb-4"
                           asp-for="Able" type="checkbox">
                    <label asp-for="Able" class="form-check-label"></label>
                </div>


                <div class="container d-flex justify-content-center py-3">
                    <input class="col-12 btn btn-dark border border-dark" type="submit" value="Salvar">
                </div>

                <div class="text-center">
                    <a asp-controller="UsersMngmt" asp-action="PJList" class="text-decoration-none">Voltar</a>
                </div>

            </form>
        </div>
    </div>
</div>