@model List<Vaga>
@{
    ViewData["Title"] = "Vagas list";
}

<div class="container p-5">
    <div class="row g-5">
        @foreach (var vaga in Model)
        {
            <div class="col-12 col-md-6">
                <div class="rounded-2 border border-dark p-4 h-100">
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="fw-semibold" style="font-size: 25px;">
                            @((vaga.PJ as ProjetoInterdisciplinar.Models.PJUser)?.Name ?? "Empresa desconhecida")
                        </p>
                        <p class="" style="color: gray;">@vaga.Post.ToString("dd/MM/yyyy")</p>
                    </div>
                    <p class="fw-semibold text-primary" style="font-size: 30px;">@vaga.Cargo</p>
                    <div class="d-flex">
                        <p class="" style="font-size: 25px;">Especialidades</p>
                    </div>
                    <hr>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="">
                            <p class="" style="font-size: 25px;">R$@vaga.Salario</p>
                            <p class="" style="color: gray;">Cidade/Estado</p>
                        </div>
                        <a href="" class="btn btn-dark border border-dark">Candidatar-se</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>