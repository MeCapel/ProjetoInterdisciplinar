<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoInterdisciplinar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoInterdisciplinar.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/extra.css" />
    <link rel="stylesheet" href="~/sccs/main.css" />
</head>
<body>


    <header>

        <!-- HEADER / NAVBAR -->
        <nav class="navbar navbar-expand-md bg-light">
            <div class="container d-flex justify-content-between align-items-center">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/imgs/logos/logov3.svg" style="width: 150px;" alt="">
                </a>

                <!-- HAMBURGER MENU -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAV LINKS -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown" style="font-size: 20px;">
                    <ul class="navbar-nav gap-3">
                        <partial name="_Base" />
                    </ul>
                </div>

                <div class="d-none d-md-block">
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>



    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <!-- FOOTER -->
    <footer class="container-fluid bg-dark">
        <div class="container text-white py-5">
            <div class="row row-cols-1 row-cols-md-4">

                <!-- LOGO AREA -->
                <div class="h-25 d-flex justify-content-center justify-content-md-start py-3 p-md-0">
                    <img src="~/imgs/logos/logov3_dark.svg" alt="Logo official do website">
                </div>

                <!-- SITE MAP -->
                <div class="text-md-start text-center py-3 py-md-0 text-white">
                    <p class="fs-3">Candidatos</p>
                    <ul class="list-unstyled m-0">
                        <li>
                            <!--
                            <a class="text-decoration-none" asp-area="" asp-controller="" asp-action="">
                                <p class="fs-4 my-0">Perfil candidato</p>
                            </a>
                            <a class="text-decoration-none" asp-area="" asp-controller="" asp-action="">
                                <p class="fs-4 my-0">Cursos</p>
                            </a>-->
                            <a class="text-decoration-none" asp-area="" asp-controller="" asp-action="">
                                <p class="fs-4 my-0">Vagas</p>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="text-md-start text-center py-3 py-md-0">
                    <p class="fs-3">Empresas</p>
                    <ul class="list-unstyled m-0">
                        <li>
                            <!--
                            <a class="text-decoration-none" asp-area="" asp-controller="" asp-action="">
                                <p class="fs-4 my-0">Perfil empresa</p>
                            </a>
                            <a class="text-decoration-none" asp-area="" asp-controller="" asp-action="">
                                <p class="fs-4 my-0">Anúncios</p>
                            </a>
                            -->
                        </li>
                    </ul>
                </div>

                <div class="text-md-start text-center py-3 py-md-0">
                    <p class="fs-3">Institucional</p>
                    <ul class="list-unstyled m-0">
                        <li>
                            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Suporte">
                                <p class="fs-4 my-0">Suporte</p>
                            </a>
                            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="SobreNos">
                                <p class="fs-4 my-0">Sobre nós</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="container border-white my-5">

            <!-- EXTRAS -->
            <div class="d-flex align-items-center justify-content-between">
                <p class="fs-4 m-0">2024 -</p>
                <a href="https://github.com/MeCapel/ProjetoInterdisciplinar">
                    <img src="~/imgs/icons/github.svg" alt="Icone github">
                </a>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
